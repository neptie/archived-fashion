{%- style -%}
.hero {
  position: relative;
  height: 80vh;
  min-height: 600px;
  overflow: hidden;
  background-color: {{ section.settings.overlay_color }};
}

.hero__image {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  object-fit: cover;
  opacity: {{ section.settings.image_opacity }};
}

.hero__content {
  position: relative;
  z-index: 2;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  text-align: center;
  padding: 2rem;
}

.hero__title {
  font-family: 'Noto Sans JP', 'IBM Plex Mono', monospace;
  font-size: clamp(2.5rem, 8vw, 6rem);
  font-weight: 900;
  color: {{ section.settings.text_color }};
  margin-bottom: 1rem;
  text-shadow: 0.2em 0.2em {{ section.settings.accent_color }};
  animation: glitch 4s infinite;
}

.hero__tagline {
  font-family: 'IBM Plex Mono', monospace;
  font-size: clamp(1rem, 3vw, 2rem);
  color: {{ section.settings.text_color }};
  opacity: 0.9;
  margin-top: 1rem;
}

.hero__border {
  position: absolute;
  inset: 0;
  border: 2px solid {{ section.settings.accent_color }};
  pointer-events: none;
  opacity: 0.5;
  animation: borderFlicker 2s infinite;
}

.hero__scanlines {
  position: absolute;
  inset: 0;
  background: repeating-linear-gradient(
    0deg,
    rgba(0, 0, 0, 0.1),
    rgba(0, 0, 0, 0.1) 1px,
    transparent 1px,
    transparent 2px
  );
  pointer-events: none;
  z-index: 1;
}

.hero__glitch-block {
  position: absolute;
  background: {{ section.settings.accent_color }};
  mix-blend-mode: overlay;
  animation: glitchBlock 3s infinite;
  opacity: 0.1;
}

@keyframes glitch {
  0% {
    transform: translate(0);
    text-shadow: 0.2em 0.2em {{ section.settings.accent_color }};
  }
  2% {
    transform: translate(-5px, 5px);
    text-shadow: -0.2em -0.2em {{ section.settings.accent_color }};
  }
  4% {
    transform: translate(5px, -5px);
    text-shadow: 0.2em -0.2em {{ section.settings.accent_color }};
  }
  6% {
    transform: translate(0);
    text-shadow: 0.2em 0.2em {{ section.settings.accent_color }};
  }
}

@keyframes borderFlicker {
  0% { opacity: 0.5; }
  5% { opacity: 0.8; }
  10% { opacity: 0.3; }
  15% { opacity: 0.5; }
  70% { opacity: 0.5; }
  75% { opacity: 0.1; }
  80% { opacity: 0.5; }
}

@keyframes glitchBlock {
  0% {
    top: -100%;
    left: -100%;
    width: 0;
    height: 0;
  }
  25% {
    top: 50%;
    left: 50%;
    width: 100px;
    height: 10px;
  }
  50% {
    top: 80%;
    left: 30%;
    width: 50px;
    height: 100px;
  }
  75% {
    top: 20%;
    left: 80%;
    width: 200px;
    height: 5px;
  }
  100% {
    top: -100%;
    left: -100%;
    width: 0;
    height: 0;
  }
}
{%- endstyle -%}

<div class="hero">
  {% if section.settings.image != blank %}
    {{ section.settings.image | image_url: width: 2000 | image_tag:
      loading: 'eager',
      class: 'hero__image',
      alt: section.settings.image.alt | escape
    }}
  {% endif %}
  
  <div class="hero__scanlines"></div>
  <div class="hero__border"></div>
  <div class="hero__glitch-block"></div>
  
  <div class="hero__content">
    <h1 class="hero__title">{{ section.settings.title }}</h1>
    <div class="hero__tagline">{{ section.settings.tagline }}</div>
    
    {% if section.settings.button_label != blank and section.settings.button_link != blank %}
      <a href="{{ section.settings.button_link }}" 
         class="button button--primary mt-8 hover:scale-105 transition-transform"
         style="
           background-color: {{ section.settings.accent_color }};
           color: {{ section.settings.text_color }};
           font-family: 'IBM Plex Mono', monospace;
           padding: 1rem 2rem;
           border: 2px solid {{ section.settings.text_color }};
         "
      >
        {{ section.settings.button_label }}
      </a>
    {% endif %}
  </div>
</div>

