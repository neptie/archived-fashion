{% assign main_menu = linklists[section.settings.main_menu] %}

<header class="glass-panel sticky top-0 z-50 border-b border-accent/30">
  <div class="container-fluid">
    <div class="flex items-center justify-between py-4">
      <!-- Logo -->
      <div class="flex-shrink-0">
        <a href="/" class="flex flex-col">
          <span class="text-3xl font-stencil tracking-wider text-accent">{{ shop.name }}</span>
          <span class="text-lg font-stencil">アーカイブファッション</span>
        </a>
      </div>

      <!-- Navigation -->
      <nav class="hidden md:flex space-x-8">
        {% for link in main_menu.links %}
          <a href="{{ link.url }}" class="text-lg font-stencil hover:text-accent transition-colors">
            {{ link.title }}
          </a>
        {% endfor %}
      </nav>

      <!-- Cart -->
      <div class="flex items-center space-x-4">
        <button class="arcade-button text-lg py-2">
          Cart ({{ cart.item_count }})
        </button>
      </div>
    </div>
  </div>
</header>

{% schema %}
{
  "name": "Header",
  "settings": [
    {
      "type": "link_list",
      "id": "main_menu",
      "label": "Main Menu",
      "default": "main-menu"
    }
  ]
}
{% endschema %}

<style>
.station-header {
  background: rgba(10, 10, 10, 0.95);
  border-bottom: 1px solid var(--neon-pink);
}

.station-badge {
  background: var(--neon-pink);
  color: black;
  padding: 0.2em 0.4em;
  border-radius: 4px;
  font-weight: 600;
  font-size: 0.8em;
}

.nav-link {
  position: relative;
  padding: 0.5rem 0;
  text-align: center;
}

.nav-link::after {
  content: '';
  position: absolute;
  bottom: 0;
  left: 0;
  width: 100%;
  height: 2px;
  background: var(--neon-pink);
  transform: scaleX(0);
  transition: transform 0.3s ease;
}

.nav-link:hover::after,
.nav-link[aria-current="page"]::after {
  transform: scaleX(1);
}

.cart-status {
  padding: 0.5rem 1rem;
  border: 1px solid var(--neon-pink);
  border-radius: 4px;
  transition: all 0.3s ease;
  text-align: center;
}

.cart-status:hover {
  background: rgba(255, 16, 240, 0.1);
  box-shadow: 0 0 20px rgba(255, 16, 240, 0.3);
}

.cart-count {
  display: inline-block;
  background: var(--neon-pink);
  color: black;
  padding: 0.2em 0.5em;
  border-radius: 9999px;
  font-size: 0.8em;
  margin-left: 0.5em;
}

.mobile-menu-button {
  padding: 0.5rem 1rem;
  border: 1px solid var(--neon-pink);
  border-radius: 4px;
  text-align: center;
}

.mobile-nav-link {
  padding: 1rem;
  border-bottom: 1px solid rgba(255, 16, 240, 0.1);
  text-align: center;
}

.mobile-nav-link:hover {
  background: rgba(255, 16, 240, 0.1);
}

@media (max-width: 768px) {
  .nav-link {
    padding: 1rem 0;
  }
  
  .cart-status,
  .mobile-menu-button {
    padding: 0.5rem;
  }
}
</style>

<script>
document.querySelector('.mobile-menu-button').addEventListener('click', function() {
  document.querySelector('.mobile-menu').classList.toggle('hidden');
});
</script> 