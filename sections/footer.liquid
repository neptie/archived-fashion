<footer class="glass-panel mt-auto border-t border-accent/30">
  <div class="container-fluid py-12">
    <div class="grid md:grid-cols-3 gap-8">
      <!-- Shop Info -->
      <div>
        <h2 class="text-2xl font-stencil mb-4 text-accent">{{ shop.name }}</h2>
        <p class="mb-4 text-lg">{{ section.settings.description }}</p>
        <div class="flex space-x-4">
          {% if section.settings.twitter_url != blank %}
            <a href="{{ section.settings.twitter_url }}" class="arcade-button text-lg py-2" target="_blank" rel="noopener">Twitter</a>
          {% endif %}
          {% if section.settings.instagram_url != blank %}
            <a href="{{ section.settings.instagram_url }}" class="arcade-button text-lg py-2" target="_blank" rel="noopener">Instagram</a>
          {% endif %}
        </div>
      </div>

      <!-- Quick Links -->
      <div>
        <h3 class="text-xl font-stencil mb-4 text-accent">Quick Links</h3>
        <ul class="space-y-2">
          {% for link in linklists[section.settings.footer_menu].links %}
            <li>
              <a href="{{ link.url }}" class="text-lg hover:text-accent transition-colors">
                {{ link.title }}
              </a>
            </li>
          {% endfor %}
        </ul>
      </div>

      <!-- Newsletter -->
      <div>
        <h3 class="text-xl font-stencil mb-4 text-accent">Newsletter</h3>
        <p class="mb-4 text-lg">{{ section.settings.newsletter_text }}</p>
        {% form 'customer', class: 'space-y-4' %}
          <input type="hidden" name="contact[tags]" value="newsletter">
          <div>
            <input
              type="email"
              name="contact[email]"
              class="w-full bg-cream-light border border-accent/30 p-2 text-lg"
              placeholder="Email"
              required
            >
          </div>
          <button type="submit" class="arcade-button w-full text-lg">
            Subscribe
          </button>
        {% endform %}
      </div>
    </div>

    <!-- Copyright -->
    <div class="mt-12 pt-8 border-t border-accent/30 text-center">
      <p class="text-lg">&copy; {{ 'now' | date: '%Y' }} {{ shop.name }}. All rights reserved.</p>
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "settings": [
    {
      "type": "text",
      "id": "description",
      "label": "Description",
      "default": "Your destination for vintage and archived fashion pieces."
    },
    {
      "type": "url",
      "id": "twitter_url",
      "label": "Twitter URL"
    },
    {
      "type": "url",
      "id": "instagram_url",
      "label": "Instagram URL"
    },
    {
      "type": "link_list",
      "id": "footer_menu",
      "label": "Footer Menu",
      "default": "footer"
    },
    {
      "type": "text",
      "id": "newsletter_text",
      "label": "Newsletter Text",
      "default": "Subscribe to get updates on new arrivals and special offers."
    }
  ]
}
{% endschema %} 